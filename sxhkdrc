# for firefox

super + w
	"firefox"

super + shift + w
    "qutebrowser"

#brightness

XF86MonBrightnessUp
	xbacklight -inc 5

XF86MonBrightnessDown
	xbacklight -dec 5

shift + k
	xbacklight -inc 5
shift + j
	xbacklight -dec 5

#volume

shift + h
	amixer sset Master 5%+

shift + l
	amixer sset Master 5%-

shift + x
	amixer sset Master toggle
	
XF86AudioRaiseVolume
	amixer sset Master 5%+

XF86AudioLowerVolume
	amixer sset Master 5%-

XF86AudioMute
	amixer sset Master toggle

# pause and play songs

alt + q
	playerctl play-pause

alt + w
	playerctl --player=mpd play-pause

alt + shift + q
	playerctl --player=mpd previous

alt + shift + w
	playerctl --player=mpd next

alt + z
	playerctl stop

# flameshot

super + Print
	flameshot gui

alt + p
	flameshot gui
	
# blueman

super + shift + b
	blueman-manager

# i3lock

super + shift + c
	i3lock -c "#32302f"

# shutdown and reboot

super + ctrl + shift + x
	systemctl poweroff

super + ctrl + shift + r 
	systemctl reboot

# typing test
alt + t
    kitty -e typioca

# file managerr
alt + f
    pcmanfm
