# for firefox

super + w
	"firefox"

#brightness

XF86MonBrightnessUp
	xbacklight -inc 5

XF86MonBrightnessDown
	xbacklight -dec 5

alt + a
	xbacklight -inc 5
alt + s
	xbacklight -dec 5

#volume

alt + shift + a
	amixer sset Master 5%+

alt + shift + s
	amixer sset Master 5%-

alt + shift + x
	amixer sset Master toggle
	
XF86AudioRaiseVolume
	amixer sset Master 5%+

XF86AudioLowerVolume
	amixer sset Master 5%-

XF86AudioMute
	amixer sset Master toggle

# flameshot

super + Print
	flameshot gui

alt + p
	flameshot gui
	
# blueman

super + shift + b
	blueman-manager

# i3lock

super + shift + c
	i3lock -c "#32302f"

# shutdown and reboot

super + ctrl + shift + x
	systemctl poweroff

super + ctrl + shift + r 
	systemctl reboot
